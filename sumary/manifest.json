{
    "manifest_version": 3,
    "name": "Cyberpunk Page Summary",
    "version": "1.0",
    "description": "Summarizes the content of the current webpage with a cyberpunk theme.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "permissions": ["activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }